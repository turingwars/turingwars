{
  "name": "turing-wars",
  "version": "1.0.0",
  "description": "A 21th century core-wars reboot",
  "main": "bin/server/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/turingwars/turingwars"
  },
  "scripts": {
    "start": "ts-node src/server/main.ts",
    "test": "tslint -p . && jest",
    "test:watch": "jest --watch",
    "dev:frontend": "webpack-dev-server",
    "build:frontend": "webpack",
    "watch:frontend": "webpack --watch",
    "build:views": "topside --outDir src/server/views --baseDir src/server/templates src/server/templates/**/*.top.html",
    "gen:example": "ts-node"
  },
  "author": "The swag crew",
  "license": "MIT",
  "dependencies": {
    "@senhung/http-exceptions": "^1.1.1",
    "@types/codemirror": "0.0.58",
    "@types/d3": "^5.0.0",
    "@types/d3-shape": "^1.2.2",
    "@types/jquery": "^3.3.0",
    "@types/underscore": "^1.8.7",
    "ajv": "^6.2.0",
    "axios": "^0.18.0",
    "body-parser": "^1.18.2",
    "byline": "^5.0.0",
    "class-transformer-validator": "^0.5.0",
    "class-validator": "^0.9.1",
    "codemirror": "^5.31.0",
    "d3": "^5.5.0",
    "d3-shape": "^1.2.0",
    "express": "^4.16.2",
    "express-youch": "0.0.2",
    "jquery": "^3.3.1",
    "loglevel": "^1.6.1",
    "react-codemirror2": "^5.1.0",
    "reflect-metadata": "^0.1.12",
    "restyped-express-async": "^0.6.1",
    "routing-controllers": "^0.7.6",
    "sqlite3": "^4.0.2",
    "topside": "^0.6.4",
    "tslib": "^1.9.3",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.7",
    "typeorm-typedi-extensions": "^0.2.1",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/byline": "^4.2.31",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.5.4",
    "@types/react": "^16.4.7",
    "@types/react-dom": "^16.0.6",
    "@types/react-redux": "^6.0.5",
    "@types/redux": "^3.6.0",
    "@types/uuid": "^3.4.3",
    "@types/webpack": "^4.4.8",
    "@types/webpack-env": "^1.13.5",
    "cors": "^2.8.4",
    "jest": "^23.4.2",
    "restyped-axios": "^1.3.2",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "ts-node": "^7.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.0.1",
    "webpack": "^4.16.3",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.5"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 19
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  }
}
