{
  "name": "turing-wars",
  "version": "1.0.0",
  "description": "A 21th century core-wars reboot",
  "main": "bin/server/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/turingwars/turingwars"
  },
  "scripts": {
    "start": "npm run build:views && ts-node src/server/main.ts",
    "test": "tslint -p . && jest",
    "test:watch": "jest --watch",
    "dev:frontend": "webpack-dev-server",
    "build:frontend": "webpack",
    "watch:frontend": "webpack --watch",
    "build:views": "topside --outDir src/server/views --baseDir src/server/templates src/server/templates/**/*.top.html",
    "gen:example": "ts-node"
  },
  "author": "The swag crew",
  "license": "MIT",
  "dependencies": {
    "@types/d3": "^4.13.0",
    "@types/d3-shape": "^1.2.2",
    "@types/jquery": "^3.3.0",
    "@types/underscore": "^1.8.7",
    "ajv": "^6.2.0",
    "body-parser": "^1.18.2",
    "byline": "^5.0.0",
    "class-transformer-validator": "^0.4.1",
    "class-validator": "^0.7.3",
    "d3": "^4.13.0",
    "d3-shape": "^1.2.0",
    "express": "^4.16.2",
    "jquery": "^3.3.1",
    "loglevel": "^1.6.1",
    "reflect-metadata": "^0.1.12",
    "routing-controllers": "^0.7.6",
    "sqlite3": "^3.1.13",
    "topside": "^0.6.4",
    "typedi": "^0.5.2",
    "typeorm": "^0.1.14",
    "typeorm-typedi-extensions": "^0.1.1",
    "underscore": "^1.8.3",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/byline": "^4.2.31",
    "@types/cors": "^2.8.3",
    "@types/express": "^4.11.1",
    "@types/jest": "^21.1.10",
    "@types/node": "^8.9.4",
    "@types/uuid": "^3.4.3",
    "@types/webpack-env": "^1.13.5",
    "cors": "^2.8.4",
    "jest": "^21.2.1",
    "ts-jest": "^21.2.4",
    "ts-loader": "^3.5.0",
    "ts-node": "^3.3.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2",
    "webpack": "^3.11.0",
    "webpack-dev-server": "^2.11.2"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 10,
        "functions": 10,
        "lines": 10,
        "statements": 19
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  }
}
