{
    "compilerOptions": {
      "outDir": ".tmp/transpiled",
      "baseUrl": "src",
      "declaration": false,
      "noImplicitAny": true,
      "strict": true,
      "strictPropertyInitialization": false,
      "sourceMap": true,
      "module": "commonjs",
      "target": "es5",
      "allowJs": false,
      "importHelpers": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "jsx": "react",
      "lib": [
        "es2015",
        "dom"
      ],
      // "paths": {
      //   "frontend/*": ["frontend/*"],
      //   "shared/*": ["shared/*"],
      //   "server/*": ["server/*"],
      // },
      "plugins": [
        { "name": "tslint-language-service"}
      ]
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "test/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
